// -*- mode: javascript -*-
{
    "Name": "Turek-Hron cfd3",
    "ShortName":"cfd3",
    "Models":
    {
        "fluid":{
            "materials":"Fluid",
            "equations":"Navier-Stokes"
        },
        "body":{
            "name":"bodyTOTO",
            "materials":["MySolid","MySolid2"]
        }
    },
    "Parameters":
    {
        "ubar":"2",
        "chi":"t<2:t"
    },
    "Meshes":
    {
        "fluid":
        {
            "Import":
            {
                "filename":"$cfgdir/cfd.geo",
                "hsize":0.03
            },
            "MeshMotion":
            {
                "ComputationalDomain":
                {
                    "markers":"Fluid"
                },
                "Displacement":
                {
                    "Zero":["inlet","wall","outlet"]
                }
            }
        }
    },
    "Materials":
    {
        "Fluid":{
            //"physics":"fluid",
            "rho":"1.0e3",
            "mu":"1.0"
        },
        "MySolid":{
            "markers":["cylinder"],
            //"physics":"body",
            "rho":"7.0e3"
        },
        "MySolid2":{
            "markers":["beam"],
            //"physics":"body",
            "rho":"9.0e2"
        }
    },
    "BoundaryConditions":
    {
        "fluid":
        {
            "velocity":
            {
                "inlet":
                {
                    "expr":"{ 1.5*ubar*(4./0.1681)*y*(0.41-y)*( ((1-cos(pi*t/2))/2)*chi + (1-chi) ),0}:ubar:y:t:chi"
                    //"expr":"{0,0}"
                },
                "wall":
                {
                    "expr":"{0,0}"
                }
            },
            "outlet":
            {
                "outlet":
                {
                    "expr":"0" 
                }
            },
            "body":
            {
                "p1_mark":
                 {
                     "markers":["fluid-cylinder","fluid-beam"],
                     //"materials":"MySolid",
                     "materials":
                     {
                         "names":["MySolid","MySolid2"]
                         //"markers":["beam"] // optinal
                     },
                     // "mass":"1",
                     // "mass-center":"{0.2,0.2}",
                     // "moment-of-inertia":"1"

                     "translational-velocity":"{0,0}"
                     //,"angular-velocity":"sin(8*t):t"//10"
                     //,"angular-velocity":"0"
                     //"elastic-velocity":"{0, (x>0.25)*(exp(x-0.25)-1)*20*sin(10*x)*0.1*sin(2*pi*t/0.3)*( (sin(1*pi*t/0.3) > -0.00000001) - (sin(1*pi*t/0.3) < 0) ) }:x:t"
                     //,"elastic-displacement":"{0, (x>0.25)*(exp(x-0.25)-1)*1*sin(10*x)*0.1*sin(2*pi*t/0.3)*( (sin(1*pi*t/0.3) > -0.00000001) - (sin(1*pi*t/0.3) < 0) ) }:x:t"

                     
                     //"elastic-velocity":"{0, (x>0.25)*(pi/0.3)*(cos(pi*t/0.3)*2e-4)*(exp(10*x)-exp(10*0.25))}:x:t"
                     ,"elastic-displacement":"{0, 0.8*(x>0.25)*(sin(pi*t/0.3)*2e-4)*(exp(10*x)-exp(10*0.25))}:x:t"


                     //"elastic-velocity":"{0, (t>0.08)*(x>0.25)*(exp(x-0.25)-1)*1*sin(10*x)*0.1*sin(2*pi*t/0.3)*( (sin(1*pi*t/0.3) > -0.00000001) - (sin(1*pi*t/0.3) < 0) ) }:x:t"
                     // ,"elastic-velocity":
                     // {
                     //     "tit":
                     //     {
                     //         "expr":"{0, (x>0.25)*(exp(x-0.25)-1)*20*sin(10*x)*0.1*sin(2*pi*t/0.3)*( (sin(1*pi*t/0.3) > -0.00000001) - (sin(1*pi*t/0.3) < 0) ) }:x:t"
                     //         //"markers":"toto"
                     //     }
                     //     // "tut":
                     //     // {
                     //     //     "expr":"{0,0}",
                     //     //     "markers":"toto"
                     //     // }
                     // }
                }
            }
        }
    },
    "PostProcess":
    {
        "fluid":
        {
            "Exports":
            {
                "fields":["velocity","pressure","pid","mesh-displacement"]
            },
            "Measures":
            {
                "Quantities":
                {
                    "names":"all"
                },
                "Forces":"wall2",
                "Statistics":
                {
                    "mybody_translational":
                    {
                        "type":"mean",
                        "markers":["fluid-cylinder","fluid-beam"],
                        "field":"body.p1_mark.translational-velocity"
                    },
                    "mybody_angular":
                    {
                        "type":"mean",
                        "markers":["fluid-cylinder","fluid-beam"],
                        "field":"body.p1_mark.angular-velocity"
                    }
                },
                "Points":
                {
                    "pointA":
                    {
                        "coord":"{0.6,0.2,0}",
                        "fields":"pressure"
                    },
                    "pointB":
                    {
                        "coord":"{0.15,0.2,0}",
                        "fields":"pressure"
                    }
                }
            }
        }
    }

}
