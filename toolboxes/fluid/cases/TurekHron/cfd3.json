{
    "Name": "Turek-Hron cfd3",
    "ShortName":"cfd3",
    "Models":
    {
        "fluid":{
            "equations":"Navier-Stokes"
            //,"formulation":"emac" // "convective","skew-symmetric","conservative","rotational","emac"
        }
    },
    "Meshes":
    {
        "fluid":
        {
            "Import":
            {
                "filename":"$cfgdir/cfd.geo",
                "hsize":0.03
            }
        }
    },
    "Parameters":
    {
        "ubar":"2",
        "chi":"t<2:t"
    },
    "Materials":
    {
        "Fluid":{
            "rho":"1.0e3",
            "mu":"1.0"
        }
    },
    "BoundaryConditions":
    {
        "fluid":
        {
            "velocity":
            {
                "inlet":
                {
                    "expr":"{ 1.5*ubar*(4./0.1681)*y*(0.41-y)*( ((1-cos(pi*t/2))/2)*chi + (1-chi) ),0}:ubar:y:t:chi"
                },
                "walls":
                {
                    "markers":["wall1","wall2"],
                    "expr":"{0,0}"
                }
            },
            "normal_stress":
            {
                "outlet":
                {
                    "expr":"0" 
                }
            }
        }
    },
    "PostProcess":
    {
        "fluid":
        {
            "Exports":
            {
                "fields":["velocity","pressure","pid"]
            },
            "Measures":
            {
                "Forces":"wall2",
                "Points":
                {
                    "pointA":
                    {
                        "coord":"{0.6,0.2,0}",
                        "fields":"pressure"
                    },
                    "pointB":
                    {
                        "coord":"{0.15,0.2,0}",
                        "fields":"pressure"
                    }
                }
            }
        }
    }

}
