{
    "Name": "Kovasznay Stokes 2d",
    "ShortName":"kovs2d",
    "Models":
    {
        "equations":"Stokes"
    },
    "Parameters":
    {
        "nu":1,
        "pi":3.141592653589793,
        "alpha":"0.5/nu + sqrt(0.25/(nu^2) + 4*pi^2):nu:pi",
        "pex":"-0.5*exp(2*alpha*x):x:alpha",
        "pdynex":"0.125*alpha*alpha*exp(2*alpha*x)*sin(2*pi*y)^2/pi^2 + 0.5*(-exp(alpha*x)*cos(2*pi*y) + 1)^2 - 0.5*exp(2*alpha*x):x:y:pi:alpha",
        "uexx":"(-exp(alpha*x)*cos(2*pi*y) + 1):x:y:alpha:pi",
        "uexy":"(alpha*exp(alpha*x)*sin(2*pi*y)/(2*pi)):x:y:pi:alpha",
        "ugradexxx":"-alpha*exp(alpha*x)*cos(2*pi*y):x:y:pi:alpha",
        "ugradexxy":"alpha^2*exp(alpha*x)*sin(2*pi*y)/(2*pi):x:y:pi:alpha",
        "ugradexyx":"2*pi*exp(alpha*x)*sin(2*pi*y):x:y:pi:alpha",
        "ugradexyy":"alpha*exp(alpha*x)*cos(2*pi*y):x:y:pi:alpha",
        "Cx":"(-alpha*(-exp(alpha*x)*cos(2*pi*y) + 1)*exp(alpha*x)*cos(2*pi*y) + alpha*exp(2*alpha*x)*sin(2*pi*y)^2):x:y:pi:alpha",
        "Cy":"(alpha^2*(-exp(alpha*x)*cos(2*pi*y) + 1)*exp(alpha*x)*sin(2*pi*y)/(2*pi) + alpha^2*exp(2*alpha*x)*sin(2*pi*y)*cos(2*pi*y)/(2*pi)):x:y:pi:alpha"
    },
    "Materials":
    {
        "Omega":{
            "rho":"1",
            "mu":"nu:nu"
        }
    },
    "BoundaryConditions":
    {
        "velocity":
        {
            "VolumicForces":
            {
                "Omega":
                {
                    "expr":"{0,0}"
                }
            },
            "Dirichlet":
            {
                "top":
                {
                    "expr":"{(1 - exp(alpha*x)),0}:x:alpha"
                },
                "bottom":
                {
                    "expr":"{(1 - exp(alpha*x)),0}:x:alpha"
                }
            }
        },
        "pressure":
        {
            "Dirichlet":
            {
                "left":
                {
                    "expr":"pex:pex"
                },
                "right":
                {
                    "expr":"pex:pex"
                }
            }
        }
    },
    "PostProcess":
    {
        "Measures":
        {
            "Norm":
            {
                "p": 
                {
                    "type":"L2-error", 
                    "field":"pressure",
                    "quad":10,
                    "solution":"pex:pex", 
                    "markers":"Omega" 
                },
                "u": 
                {
                    "type":["L2-error","H1-error"], 
                    "field":"velocity",
                    "quad":10,
                    "solution":"{uexx,uexy}:uexx:uexy",
                    "grad_solution":"{ugradexxx, ugradexyx, ugradexxy, ugradexyy}:ugradexxx:ugradexyx:ugradexxy:ugradexyy",
                    "markers":"Omega" 
                }
            }
        },
        "Checkers":
        {
            "Measures":
            {
                "Norm_u_L2-error":
                {
                    "value":0,
                    "tolerance":1
                },
                "Norm_u_H1-error":
                {
                    "value":0,
                    "tolerance":1
                },
                "Norm_p_L2-error":
                {
                    "value":0,
                    "tolerance":1
                }
            }
        },
        "Exports":
        {
            "fields":["velocity","pressure","pid"],
            "expr":
            {
                "u_ex":"{uexx,uexy}:uexx:uexy",
                "p_ex":"pex:pex"
            }
        }
    }

}
