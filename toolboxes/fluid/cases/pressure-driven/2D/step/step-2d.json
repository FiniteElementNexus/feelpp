{
    "Name": "Backward Facing Step 2D",
    "ShortName":"bfs2d",
    "Models":
    {
        "fluid":
        {
            "equations":"Navier-Stokes"
        }
    },
    "Parameters":
    {
        "nu":1,
        "pout":"0",
        "uxin":"6*(2-y)*(y-1):y",
        "uyin":"0"
    },
    "Meshes":
    {
        "fluid":
        {
            "Import":
            {
                "filename":"$cfgdir/step-2d.geo"
            }
        }
    },
    "Materials":
    {
        "Omega":{
            "rho":"1",
            "mu":"nu:nu"
        }
    },
    "BoundaryConditions":
    {
        "fluid":
        {
            "velocity":
            {
                "wall":
                {
                    "expr":"{0,0}"
                },
                "inlet":
                {
                    "expr":"{uxin,uyin}:uxin:uyin"
                }
            },
            "pressure":
            {
                "outlet":
                {
                    "expr":"pout:pout"
                }
            }
        }
    },
    "PostProcess":
    {
        "fluid":
        {
            "Exports":
            {
                "fields":["velocity","pressure","pid"]
            }
        }
    }
}