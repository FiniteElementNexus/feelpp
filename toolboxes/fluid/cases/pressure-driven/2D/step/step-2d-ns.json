{
    "Name": "Backward Facing Step 2D",
    "ShortName":"bfs2d",
    "Models":
    {
        "fluid":
        {
            "equations":"Navier-Stokes"
        }
    },
    "Parameters":
    {
        "nu":1,
        "r":1,
        "pout":0,
        "pin":11,
        "uxin":"6*(2-y)*(y-1):y",
        "uyin":"0"
    },
    "Meshes":
    {
        "fluid":
        {
            "Import":
            {
                "filename":"$cfgdir/step-2d.geo"
            }
        }
    },
    "Materials":
    {
        "Omega":
        {
            "rho":"r:r",
            "mu":"nu:nu"
        }
    },
    "BoundaryConditions":
    {
        "fluid":
        {
            "velocity":
            {
                "wall":
                {
                    "expr":"{0,0}"
                }
            },
            "pressure":
            {
                "outlet":
                {
                    "expr":"pout:pout"
                },
                "inlet":
                {
                    "expr":"pin:pin"
                }
            }
        }
    },
    "PostProcess":
    {
        "fluid":
        {
            "Measures":
            {
                "Statistics":
                {
                    "Re_D": 
                    {
                        "type":"integrate",
                        "expr":"2*fluid_U_magnitude*r/nu:fluid_U_magnitude:r:nu",
                        "markers":"inlet"
                    }
                }
            },
            "Exports":
            {
                "fields":["velocity","pressure","pid"]
            }
        }
    }
}