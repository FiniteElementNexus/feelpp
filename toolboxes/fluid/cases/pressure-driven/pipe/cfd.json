{
    "Name": "gravity",
    "ShortName":"gravity",
    "Models":
    {
        "equations":"Stokes"
    },
    "Materials":
    {
        "Omega":{
            "rho":"1",
            "mu":"1"
        }
    },
    "BoundaryConditions":
    {
        "velocity":
        {
            "Dirichlet":
            {
                "left":
                {
                    "expr":"{0,0}"
                },
                "right":
                {
                    "expr":"{0,0}"
                }
            }
        },
        "pressure":
        {
            "Dirichlet":
            {
                "top":
                {
                    "expr":0
                },
                "bottom":
                {
                    "expr":1
                }
            }
        }
    },
	"Exact solution":
	{
	    "p_exact":
	    {
		    "Omega":
		    {
		        "expr":"1-y/4:y"
		    }
	    },
        "u_exact":
        {
            "Omega":
            {
                "expr":"{0,x*(1-x)/8}:x"
            }
        }
    },
    "PostProcess":
    {
        "Measures":
        {
            "Norm":
            {
                "p": 
                {
                    "type":"L2-error", 
                    "field":"pressure", 
                    "solution":"1-y/4:y",
                    "markers":"Omega" 
                },
                "u": 
                {
                    "type":"L2-error", 
                    "field":"velocity", 
                    "solution":"{0,-x*(x-1)/8}:x",
                    "markers":"Omega" 
                }
            }
        },
        "Exports":
        {
            "fields":["velocity","pressure","pid", "materials.dynamic-viscosity","u_exact","p_exact"]
        }
    }

}
