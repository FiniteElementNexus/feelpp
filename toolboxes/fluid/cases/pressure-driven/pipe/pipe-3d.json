{
    "Name": "straight-pipe",
    "ShortName":"sp",
    "Models":
    {
        "equations":"Stokes"
    },
    "Parameters":
    {
        "nu":1,
        "L":1,
        "pin":10,
        "pout":1,
        "R":0.2,
        "uex":"(pin-pout)*R^2*(1-(y^2+z^2)/(R^2))/(4*nu*L):x:y:z:R:pin:pout:nu:L",
        "pex":"pin+(pout-pin)*x/L:x:y:z:L:pin:pout"
    },
    "Materials":
    {
        "Omega":
        {
            "rho":"1",
            "mu":"nu:nu"
        }
    },
    "BoundaryConditions":
    {
        "velocity":
        {
            "Dirichlet":
            {
                "wall":
                {
                    "expr":"{0,0,0}"
                }
            }
        },
        "pressure":
        {
            "Dirichlet":
            {
                "outlet":
                {
                    "expr":"pout:pout"
                },
                "inlet":
                {
                    "expr":"pin:pin"
                }
            }
        }
    },
    "PostProcess":
    {
        "Measures":
        {
            "Norm":
            {
                "p": 
                {
                    "type":"L2-error", 
                    "field":"pressure", 
                    "solution":"pex:pex", //"1-x/2:x", 
                    "markers":"Omega" 
                },
                "u": 
                {
                    "type":"L2-error", 
                    "field":"velocity", 
                    "solution":"{uex,0,0}:uex", //"{(0.25-(y*y+z*z))/8,0,0}:y:z", 
                    "markers":"Omega" 
                }
            }
        },
        "Exports":
        {
            "fields":["velocity","pressure","pid"],
            "expr":
            {
                "u_ex":"{uex,0,0}:uex",
                "p_ex":"pex:pex"
            }
        }
    }

}
