{
    "Name": "Fluid Mechanics",
    "ShortName":"Fluid",
    "Models":
    {
        "fluid":{
            "equations":"Navier-Stokes"
        }
    },
    "Parameters":
    {
        "ubar":"2",
        "chi":"t<2:t"
    },
    "Meshes":
    {
        "fluid":
        {
            "Import":
            {
                "filename":"$cfgdir/cfd.geo",
                "hsize":0.03 // #M0=0.03;M1=0.015 ( work also 0.04)
            }
        }
    },
    "Materials":
    {
        "Fluid":{
            "rho":"1.0e3",
            "mu":"1.0"
        }
    },
    "BoundaryConditions":
    {
        "fluid":
        {
            "velocity":
            {
                "inlet":
                {
                    "expr":"{ 1.5*ubar*23.795*(4./0.1681)*y*(0.41-y)*z*(0.41-z)*( ((1-cos(pi*t/2))/2)*(t<2) + (1-(t<2)) ),0,0}:ubar:y:z:t"
                },
                "wall":
                {
                    "markers":["wall1","wall2"],
                    "expr":"{0,0,0}"
                }
            },
            "outlet":
            {
                "outlet":
                {
                    "expr":"0" 
                }
            }
        }
    },
    "PostProcess":
    {
        "fluid":
        {
            "Exports":
            {
                "fields":["velocity","pressure","pid"]
            },
            "Measures":
            {
                "Forces":"wall2"
            }
        }
    }

}
