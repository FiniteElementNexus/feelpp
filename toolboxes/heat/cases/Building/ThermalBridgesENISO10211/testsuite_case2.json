// -*- mode: javascript -*-
{
    "Name": "ISO 10211:2007 Thermal bridges in building construction : Case 2",
    "ShortName":"ThermalBridges : Case 2",
    "Parameters":
    {
        "h_top":"1.0/0.06",
        "h_bottom":"1.0/0.11",
        "T0_top":0,
        "T0_bottom":20
    },
    "Meshes":
    {
        "heat":
        {
            "Import":
            {
                "filename":"$cfgdir/case2.geo",
                "hsize":0.001
            }
        }
    },
    "Materials":
    {
        "Concrete":
        {
            "markers":"mat1",
            "k":"1.15",//[ W/(m*K) ]
            "Cp":"880", //[ J/(kg*K) ]
            "rho":"2300" //[ kg/(m^3) ]
        },
        "Wood":
        {
            "markers":"mat2",
            "k":"0.12",//[ W/(m*K) ]
            "Cp":"2500", //[ J/(kg*K) ]
            "rho":"500" //[ kg/(m^3) ]
        },
        "%1_1%":
        {
            "markers":"%1_2%",
            "k":"%1_3%",
            "Cp":"%1_4%",
            "rho":"%1_5%",
            "index1":[ ["Aluminium","mat4",230,900,2700],
                       ["Insulation","mat3",0.029,1000,150] ]
        }
    },
    "BoundaryConditions":
    {
        "temperature":
        {
            "Robin":
            {
                "top":
                {
                    "expr1":"h_top:h_top",// h coeff
                    "expr2":"T0_top:T0_top"// temperature exterior
                }
                // "bottom":
                // {
                //     "expr1":"h_bottom:h_bottom",// h coeff
                //     "expr2":"T0_bottom:T0_bottom"// temperature exterior
                // }
            },
            "Neumann":
            {
                "bottom":
                {
                    "expr":"-h_bottom*(heat_T-T0_bottom):h_bottom:heat_T:T0_bottom"
                }
            }
        }
    },
    "PostProcess":
    {
        "heat":
        {
            "Exports":
            {
                "fields":["temperature","pid"]
            },
            "Save":
            {
                "Fields":
                {
                    "names":["temperature"]
                    //"format":"hdf5"
                }
            },
            "Measures":
            {
                //"Normal-Heat-Flux":"bottom",
                "Normal-Heat-Flux":
                {
                    "bottom":
                    {
                        "markers":"bottom",
                        "direction":"inward"
                    }
                },
                "Statistics":
                {
                    "Check_Heat-Flux_top":
                    {
                        "type":"integrate",
                        "expr":"-materials_Concrete_k*heat_dn_T - h_top*(heat_T-T0_top):materials_Concrete_k:heat_dn_T:heat_T:h_top:T0_top",
                        "markers":"top"
                    },
                    "Check_Heat-Flux_bottom":
                    {
                        "type":"integrate",
                        "expr":"-materials_Aluminium_k*heat_dn_T - h_bottom*(heat_T-T0_bottom):materials_Aluminium_k:heat_dn_T:heat_T:h_bottom:T0_bottom",
                        "markers":"bottom"
                    },
                    "CheckGeneric_Heat-Flux_%1_1%":
                    {
                        "type":"integrate",
                        "expr":"-materials_%1_2%_k*heat_dn_T - h_%1_1%*(heat_T-T0_%1_1%):materials_%1_2%_k:heat_dn_T:heat_T:h_%1_1%:T0_%1_1%",
                        "markers":"%1_1%",
                        "index1":[ ["top", "Concrete"],["bottom", "Aluminium"] ]
                    },
                    "Inward-Heat-Flux_bottom":
                    {
                        "type":"integrate",
                        "expr":"-h_bottom*(heat_T-T0_bottom):heat_T:h_bottom:T0_bottom",
                        "markers":"bottom"
                    },
                    "Inward-Heat-Flux_V2_bottom":
                    {
                        "type":"integrate",
                        "expr":"-heat_nflux:heat_nflux",
                        "markers":"bottom"
                    }
                },
                "Points":
                {
                    "point%1_1%":
                    {
                        "coord":"%1_2%",
                        "fields":"temperature",
                        "expressions":
                        {
                            "temperature":"heat_T:heat_T",
                            "pos":"{x,y}:x:y"
                        },
                        "index1":[ ["A", "{0,0.0475}"],
                                   ["B", "{0.5,0.0475}"],
                                   ["C", "{0,0.0415}"],
                                   ["D", "{0.015,0.0415}"],
                                   ["E", "{0.5,0.0415}"],
                                   ["F", "{0,0.0365}"],
                                   ["G", "{0.015,0.0365}"],
                                   ["H", "{0,0}"],
                                   ["I", "{0.5,0}"]
                                 ]
                    },
                    "pointsBIS":
                    {
                        "coord":["{0,0.0475}","{0.5,0.0475}","{0,0.0415}","{0.015,0.0415}",
                                 "{0.5,0.0415}","{0,0.0365}","{0.015,0.0365}","{0,0}","{0.5,0}"],
                        "fields":"temperature",
                        "expressions":
                        {
                            "temperature":"heat_T:heat_T"
                        }
                    }
                }
            },
            "Checkers":
            {
                "Measures":
                {
                    "Points_point%1_1%_%2%_temperature":
                    {
                        "value":"%1_2%",
                        "tolerance":1e-1,
                        "index1": [ [ "A", "7.1" ],
                                    [ "B", "0.8" ],
                                    [ "C", "7.9" ],
                                    [ "D", "6.3" ],
                                    [ "E", "0.8" ],
                                    [ "F", "16.4" ],
                                    [ "G", "16.3" ],
                                    [ "H", "16.8" ],
                                    [ "I", "18.3" ]
                                  ],
                        "index2":["field","expr"]
                    },
                    "Points_pointsBIS_%1_1%_%2%_temperature":
                    {
                        "value":"%1_2%",
                        "tolerance":1e-1,
                        "index1": [ [ "0", "7.1" ],
                                    [ "1", "0.8" ],
                                    [ "2", "7.9" ],
                                    [ "3", "6.3" ],
                                    [ "4", "0.8" ],
                                    [ "5", "16.4" ],
                                    [ "6", "16.3" ],
                                    [ "7", "16.8" ],
                                    [ "8", "18.3" ]
                                  ],
                        "index2":["field","expr"]
                    },
                    "Points_point%1_1%_expr_pos_0":
                    {
                        "value":"%1_2%",
                        "tolerance":1e-5,
                        "index1":[ ["A", "0"],
                                   ["B", "0.5"],
                                   ["C", "0"],
                                   ["D", "0.015"],
                                   ["E", "0.5"],
                                   ["F", "0"],
                                   ["G", "0.015"],
                                   ["H", "0"],
                                   ["I", "0.5"]
                                 ]
                    },
                    "Points_point%1_1%_expr_pos_1":
                    {
                        "value":"%1_2%",
                        "tolerance":1e-5,
                        "index1":[ ["A", "0.0475"],
                                   ["B", "0.0475"],
                                   ["C", "0.0415"],
                                   ["D", "0.0415"],
                                   ["E", "0.0415"],
                                   ["F", "0.0365"],
                                   ["G", "0.0365"],
                                   ["H", "0"],
                                   ["I", "0"]
                                 ]
                    },
                    "Statistics_Check_Heat-Flux_top_integrate":
                    {
                        "value":0,
                        "tolerance":0.5
                    },
                    "Statistics_Check_Heat-Flux_bottom_integrate":
                    {
                        "value":0,
                        "tolerance":0.5
                    },
                    "Statistics_CheckGeneric_Heat-Flux_%1%_integrate":
                    {
                        "value":0,
                        "tolerance":0.5,
                        "index1":["top","bottom"]
                    },
                    "Statistics_Inward-Heat-Flux_bottom_integrate":
                    {
                        "value":9.5,
                        "tolerance":1e-1
                    },
                    "Statistics_Inward-Heat-Flux_V2_bottom_integrate":
                    {
                        "value":9.5,
                        "tolerance":1e-1
                    },
                    "Normal_Heat_Flux_bottom":
                    {
                        "value":9.5,
                        "tolerance":1e-1
                    }
                }
            }
        }
    }
}
