{
    "Name": "HDG-Mixed-Poisson ",
    "ShortName":"MP",
    "Models": { "equations":"hdg"},
    "Materials":
    {
        "omega":
        {
            "name":"simulation_domain",
            "poisson_c":"1",
            "poisson_f":"-2*sin(y)*cos(x)+2*x:x:y"
        }
    },
    "BoundaryConditions":
    {
        "potential":
        {
            "Neumann":
            {
		        "gamma":
		        {
		            "expr":"0"
		        }
            }
	    }
    },
    "PostProcess":
    {
        "poisson":
        {
	        "Measures":
	        {
	            "Norm":
	            {		
		            "flux_error":
		            {
		                "type":"L2-error",
		                "solution":"{-sin(x)*sin(y)+y^2,-cos(x)*cos(y)+2*x*y}:x:y",
		                "field":"flux",
		                "markers":"omega",
		                "quad_order":12
		            },
		            "potential_error":
		            {
		                "type":"L2-error",
		                "solution":"sin(y)*cos(x)+x*y^2-1/6-sin(1)*(1-cos(1)):x:y",
		                "field":"potential",
		                "markers":"omega",
		                "quad_order":12
		            }
	            }
	        },
            "Checkers":
            {
                "Measures":
                {
                    "Norm_potential_error_L2-error":
                    {
                        "value":0,
                        "tolerance":1e-5
                    },
                    "Norm_flux_error_L2-error":
                    {
                        "value":0,
                        "tolerance":1
                    }
                }
            },
	        "Exports":
	        {
                "fields":["potential","flux"]
	        }
        }
    }
}
