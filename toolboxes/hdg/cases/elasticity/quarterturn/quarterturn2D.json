{
    "Name": "HDG-Mixed-Linear-Elasticity",
    "ShortName":"ME",
    "Models":
    {
        "equations":"hdg",
        "d_expr":"{1/(2*Pi^2)*sin(Pi*x)*cos(Pi*y),1/(2*Pi^2)*cos(Pi*x)*sin(Pi*y)}:x:y",
        "s_expr":"{2.0*cos(Pi*x)*cos(Pi*y)/Pi, -1.0*sin(Pi*x)*sin(Pi*y)/Pi, -1.0*sin(Pi*x)*sin(Pi*y)/Pi, 2.0*cos(Pi*x)*cos(Pi*y)/Pi}:x:y"
    },
    "Materials":
    {
        "omega":
        {
            "name":"copper",
			"rho":"1",
            "lambda":"1",
	    	"mu":"1"
        }
    },
    "BoundaryConditions":
    {
        "stress":
        {
            "SourceTerm":
            {
                "omega":
                {
                    "expr":"{-3*sin(Pi*x)*cos(Pi*y),-3*cos(Pi*x)*sin(Pi*y)}:x:y"
                }
            },
            "Neumann":
            {
                "Rint":
                {
                    "expr":"{2.0*nx*cos(Pi*x)*cos(Pi*y)/Pi - 1.0*ny*sin(Pi*x)*sin(Pi*y)/Pi, -1.0*nx*sin(Pi*x)*sin(Pi*y)/Pi + 2.0*ny*cos(Pi*x)*cos(Pi*y)/Pi}:x:y:nx:ny"
                },
                "Rext":
                {
                    "expr":"{2.0*nx*cos(Pi*x)*cos(Pi*y)/Pi - 1.0*ny*sin(Pi*x)*sin(Pi*y)/Pi, -1.0*nx*sin(Pi*x)*sin(Pi*y)/Pi + 2.0*ny*cos(Pi*x)*cos(Pi*y)/Pi}:x:y:nx:ny"
                }
            }
		},
		"displacement":
		{
	    	"Dirichlet":
	    	{
                "V0":
                {
                    "expr":"{1/(2*Pi^2)*sin(Pi*x)*cos(Pi*y),1/(2*Pi^2)*cos(Pi*x)*sin(Pi*y)}:x:y"
                },
                "V1":
                {
                    "expr":"{1/(2*Pi^2)*sin(Pi*x)*cos(Pi*y),1/(2*Pi^2)*cos(Pi*x)*sin(Pi*y)}:x:y"
                }
 	    	}
    	},
		"ExactSolution":
		{
			"u_exact":
			{
				"omega":
				{
		     		"expr":"{1/(2*Pi^2)*sin(Pi*x)*cos(Pi*y),1/(2*Pi^2)*cos(Pi*x)*sin(Pi*y)}:x:y"
				}
			}
		}
     },
    "PostProcess":
    {
        "Exports":
        {
            "fields":["stress","displacement"]
        }
    }
}
