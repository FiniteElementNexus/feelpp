{
    "Name": "HDG-Mixed-Poisson ",
    "ShortName":"MP",
    "Models":{"equations":"hdg"},
    "Parameters":
    {
        "dif":0.03125,
        "sigma0":58e3
    },
    "Materials":
    {
        "omega":
        {
            "name":"copper",
            "poisson_c":"58e+3"
            // "alpha":"3.35e-3",
            // "T0":"293",
            // "sigma0":"58e+3",
            // "k0":"0.38",
            // "sigma":"sigma0/(1+alpha*(T-T0)):sigma0:alpha:T:T0",
            // "k":"k0*T/((1+alpha*(T-T0))*T0):k0:T:alpha:T0"
        }
    },
    "BoundaryConditions":
    {
        "poisson":
        {
            "Dirichlet":
            {
                "V1":
                {
                    "expr":"0"
                }
            },
            "Neumann":
            {
                "Rint":
                {
                    "expr":"0"
                },
                "Rext":
                {
                    "expr":"0"
                },
                "top":
                {
                    "expr":"0"
                },
                "bottom":
                {
                    "expr":"0"
                }
            },
            "Integral":
            {
                "V0":
                {
                    "expr":"-800"
                }
            }
        }
    },
    "PostProcess":
    {
        "poisson":{
        "Exports":
        {
            "fields":["potential","flux"]
        },
        "Measures":
        {
            "Points":
            {
                "%1_1%":
                {
                    "coord":"%1_2%",
                    "fields":"potential",
                    "index1": [ ["V0", "{0,1.5,0.5}"],
                                ["V1", "{1.5,0,0.5}"]
                              ]
                }
            },
            "Statistics":
            {
                "Intensity0":
                {
                    "type":"integrate",
                    "field":"flux",
                    "markers":"V0"
                },
                "Intensity1":
                {
                    "type":"integrate",
                    "field":"flux",
                    "markers":"V1"
                },
                "Power":
                {
                    "type":"integrate",
                    "expr":"poisson_P:poisson_P",
                    "markers":"omega"
                }
            },
            "Norm":
            {
                "potential_error":
                {
                    "type":"L2-error",
                    "field":"potential",
                    "solution":"2*dif/Pi*atan2(y,x):x:y:z:dif",
                    "markers":"omega"
                },
                "flux_error":
                {
                    "type":"L2-error",
                    "field":"flux",
                    "solution":"{2*dif*sigma0/Pi*y/(x*x+y*y),-2*dif*sigma0/Pi*x/(x*x+y*y),0}:x:y:z:dif:sigma0",
                    "markers":"omega"
                }
            }
        },
        "Checkers":
        {
            "Measures":
            {
                "Statistics_Intensity0_integrate_0":
                {
                    "value":800,
                    "tolerance":1e-8
                },
                "Statistics_Intensity1_integrate_1":
                {
                    "value":-800,
                    "tolerance":1e-8
                },
                "Statistics_Power_integrate":
                {
                    "value":3.6799872684964548e-02,
                    "tolerance":1e-1
                },
                "Points_V0_field_potential":
                {
                    "value":3.1238703842923307e-02,
                    "tolerance":1e-1
                },
                "Points_V1_field_potential":
                {
                    "value":0,
                    "tolerance":1e-4
                },
                "Norm_potential_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-4
                },
                "Norm_flux_error_L2-error":
                {
                    "value":0,
                    "tolerance":10
                }
            }
        }
        }
    }
}
