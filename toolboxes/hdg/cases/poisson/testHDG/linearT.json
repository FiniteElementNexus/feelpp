{
    "Name": "HDG-Mixed-Poisson coupled with an OpenModelica circuit model",
    "ShortName":"MP_LC",
    "Models": { "equations":"hdg"},
    "Materials":
    {
        "omega":
        {
            "name":"simulation_domain",
            "cond":"1"
        }
    },
    "InitialConditions":
    {
        "potential":
        {
            "Expression":
            {
                "myic1":
                {
                    "markers":"omega",
					"expr":"t:x:t"
                }
            }
        }
    },
    "BoundaryConditions":
    {
        "potential":
        {
            "VolumicForces":
            {
                "omega":
                {
					"expr":"1:x:y:t"
                }
            },
            "Dirichlet":
            {
                "bc":
				{
                    "markers":["bottom","top","lateral"],
					"expr":"t:x:t"
				}
            }
        }
    },
    "PostProcess":
    {
		"Exports":
		{
        	"fields":["potential","flux"]
		},
        "Measures":
        {
            "Norm":
            {
                "potential_error":
                {
                    "type":"L2-error",
                    "field":"potential",
                    "solution":"t:x:t",
                    "markers":"omega"
                },
                "flux_error":
                {
                    "type":"L2-error",
                    "field":"flux",
                    "solution":"{0,0}:x:t",
                    "markers":"omega"
                }
            }
        },
        "Checkers":
        {
            "Measures":
            {
                "Norm_potential_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-8
                },
                "Norm_flux_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-7
                }
            }
        }
    }
}
