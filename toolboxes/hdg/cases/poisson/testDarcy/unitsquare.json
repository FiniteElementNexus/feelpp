        "potential":
        {
            "SourceTerm":
            {
                "omega":
                {
		            "expr":"-2*sin(y)*cos(x)+2*x:x:y"
                }
            },
            "Neumann":
            {
		        "gamma":
		        {
		            "expr":"0"
		        }
            }
	    }
    },
    "Functions":
    {
        "u":
        {
            "expr":"{-sin(x)*sin(y)+y^2,-cos(x)*cos(y)+2*x*y}:x:y"
        },
        "p":
        {
            "expr":"sin(y)*cos(x)+x*y^2-1/6-sin(1)*(1-cos(1)):x:y"
