{
    // case taken from https://doc.freefem.org/tutorials/rotatingHill.html
    "Name": "rotating_hill_advection",
    "ShortName": "rotating_hill_advection",
    "Models":
    {
        "cfpdes":{
            "equations":{
                "name":"equation1",
                "unknown":
                {
                    "basis":"Pdh1",
                    "name":"solution",
                    "symbol":"u"
                }
            }
        }
    },
    "Meshes":
    {
        "cfpdes":
        {
            "Import":
            {
                "filename":"$cfgdir/circle.geo",
                "hsize":0.025
            }
        }
    },
    "Materials":
    {
        "mymat1":
        {
            "markers":"Omega",
            "equation1_d":1,
            "equation1_beta":"{y,-x}:x:y" // convection
        }
    },
    "InitialConditions":
    {
        "equation1":{
            "solution":{
                "Expression":{
                    "myic":{
                        "markers":"Omega",
                        "expr":"exp(-10*((x-0.3)^2 +(y-0.3)^2)):x:y"
                    }
                }
            }
        }
    },
    "PostProcess":
    {
        "cfpdes":
        {
            "Exports":
            {
                "fields":["equation1.solution","pid"]
            }
        }
    }
}
