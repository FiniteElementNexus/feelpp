{
    "Name": "Stokes",
    "ShortName": "stokes",
    "Models":
    {
        "cfpdes":{
            "equations":[
                {
                    "name":"momentum",
                    "unknown":
                    {
                        "basis":"Pchv2",
                        "name":"velocity",
                        "symbol":"u"
                    }
                },
                {
                    "name":"mass",
                    "unknown":
                    {
                        "basis":"Pch1",
                        "name":"pressure",
                        "symbol":"p"
                    }
                }
            ]
        }
    },
    "Meshes":
    {
        "cfpdes":
        {
            "Import":
            {
                "filename":"$cfgdir/square2d.geo",
                "hsize":0.03
            }
        }
    },
    "Materials":
    {
        "fluid":
        {
            "markers":"Omega",
            //"momentum_c":"1", // diffusion
            "rho":1,
            "mu":1,
            //"momentum_gamma":"{mass_p,0,0,mass_p}:mass_p", // diffusion
            "momentum_gamma":"{mass_p-2*mu*momentum_grad_u_00,-mu*(momentum_grad_u_01+momentum_grad_u_10),-mu*(momentum_grad_u_01+momentum_grad_u_10),mass_p-2*mu*momentum_grad_u_11}:mu:mass_p:momentum_grad_u_00:momentum_grad_u_10:momentum_grad_u_01:momentum_grad_u_11",
            //"mass_gamma":"{momentum_u_0,momentum_u_1}:momentum_u_0:momentum_u_1" // div u
            "mass_f":"-(momentum_grad_u_00+momentum_grad_u_11):momentum_grad_u_00:momentum_grad_u_11" // div u
        }
    },
    "BoundaryConditions":
    {
        "momentum":
        {
            "Dirichlet":
            {
                "wall":
                {
                    "markers":["Left","Bottom","Right"],
                    "expr":"{0,0}"
                },
                "lid": {
                    "markers": ["Top"],
                    "expr": "{1,0}"
                }
            }
        }
    },
    "PostProcess":
    {
        "cfpdes":
        {
            "Exports":
            {
                "fields":["all"]
            }
        }
    }
}
