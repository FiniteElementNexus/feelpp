// -*- mode: javascript -*-
{
    "Name": "magnetostatic_h-conv",
    "ShortName":"magnetostatic_h-conv",
    "Models":
    {
        "cfpdes":{
            "equations":[
                {
                    "name":"magneto",
                    "unknown":
                    {
                        "basis":"Ned1h0",
                        "name":"potential",
                        "symbol":"A"
                    }
                },
                {
                    "name":"constraint",
                    "unknown":
                    {
                        "basis":"Pch1",
                        "name":"lm",
                        "symbol":"p"
                    }
                }
            ]
        }
    },
    "Meshes":
    {
        "cfpdes":
        {
            "Import":
            {
                "filename":"$cfgdir/square.geo",
                "hsize":0.025//0.0125//0.025
            }
        }
    },
    "Parameters":
    {
        "solution_exact":"{1-y^2,1-x^2}:x:y"
    },
    "Materials":
    {
        "Omega":
        {
            "mu":1e-3,
            "magneto_zeta":"1/mu:mu",
            "magneto_f":"{2/mu-constraint_grad_p_0,2/mu-constraint_grad_p_1}:mu:constraint_grad_p_0:constraint_grad_p_1",
            "constraint_gamma":"{magneto_A_0,magneto_A_1}:magneto_A_0:magneto_A_1"
        }
    },
    "BoundaryConditions":
    {
        "magneto":
        {
            "Dirichlet":
            {
                "boundary":
                {
                    "markers":["Left","Bottom","Right","Top"],
                    "expr":"{solution_exact_0,solution_exact_1}:solution_exact_0:solution_exact_1"
                }
            }
        },
        "constraint":
        {
            "Dirichlet":
            {
                "boundary":
                {
                    "markers":["Left","Bottom","Right","Top"],
                    "expr":"0"
                }
            }
        }
    },
    "PostProcess":
    {
        "cfpdes":
        {
            "Exports":
            {
                "fields":["magneto.potential","constraint.lm","pid"],
                "expr": {
                    "solution_exact":"{solution_exact_0,solution_exact_1}:solution_exact_0:solution_exact_1"
                }
            },
            "Measures":
            {
                "Norm":
                {
                    "error-evaluated":
                    {
                        "field":"magneto.potential",
                        "type":["L2-error"],
                        "solution":"{solution_exact_0,solution_exact_1}:solution_exact_0:solution_exact_1"
                    }
                }
            }
        }
    }
}
