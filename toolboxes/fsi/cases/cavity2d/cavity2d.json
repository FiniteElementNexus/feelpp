// -*- mode: javascript -*-
{
    "Name": "Fluid fsi",
    "ShortName":"FluidFSI",
    "Models": {
        "fluid":{
            "materials":"Fluid",
            "equations":"Navier-Stokes"
        },
        "solid":{
            "materials":"Solid",
            "equations":"Hyper-Elasticity"
        },
        "fsi":{
            "setup":{
                "interface":"fsi-wall"
            }
        }

    },
    "Parameters":
    {
        //"pi":3.1415926,
        //"uxref":"1-cos(2*pi*t/5):t:pi",
        "uxref":"1-cos(2*3.1415926*t/5):t"
    },
    "Meshes":
    {
        "fluid":
        {
            "MeshMotion":
            {
                "ComputationalDomain":
                {
                    "markers":"Fluid"
                    //"method":"harmonic_extension"
                },
                "Displacement":
                {
                    "Zero":["fluid-inlet","fluid-noslip-wall","fluid-slip-wall","fluid-outlet"]
                }
            }
        }
    },
    "Materials":
    {
        "Fluid": {
            "rho":"1",
            "mu":"0.01"
        },
        "Solid": {
            "E":"250",
            "nu":"0.",
            "rho":"500"
        }
    },
    "BoundaryConditions":
    {
        "fluid":
        {
            "velocity":
            {
                "fluid-inlet":
                {
                    "expr":"{ uxref*(8*y-7), 0 }:y:uxref"
                },
                "fluid-noslip-wall":
                {
                    "expr":"{0,0}"
                },
                "fluid-slip-wall":
                {
                    "expr":"{ uxref, 0 }:uxref"
                }
            },
            "outlet_free":
            {
                "fluid-outlet":{}
            }
        },
        "solid":
        {
            "displacement":
            {
                "solid-fixed-wall":
                {
                    "expr":"{0,0}"
                }
            },
            "normal_stress":
            {
                "solid-free-fixed":
                {
                    "expr":"0"
                }
            }
        }
    },
    "PostProcess":
    {
        "fluid":
        {
            "Exports":
            {
                "fields":["velocity","pressure","mesh-displacement","pid"]
            }
        },
        "solid":
        {
            "Exports":
            {
                "fields":["displacement","velocity","pid"]
            },
            "Measures":
            {
                "Points":
                {
                    "pointA":
                    {
                        "coord":"{0.5,0}",
                        "fields":["displacement"]
                    }
                }
            }
        }
    }
}
